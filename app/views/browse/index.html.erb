<body>

<h1> LF: Roomie </h1>
<%if user_signed_in?%>
	
	<!--%current_user.matches.destroy_all%-->

	<% flash.each do |key, value| %>
        <div class="alert alert-<%= key %>"><%= value %></div>
    <% end %>

    <%= yield %>

	<% if not @ids.empty? %>
		<p>
		  <h1><%= image_tag($user.profile_pic_url) if $user.profile_pic? %></h1>
		</p>


		<p>
		  <h2 style="text-align: center"><%= $user.firstname %> <%= $user.lastname %></h2>
		</p>

<div class = "text-center">

	<button type="button" class="btn btn-info" style = "align-content: center;">
    <span class="glyphicon glyphicon-remove" style="align-content: center; color:#FFFFFF;">
		<%= link_to '_', swipeLeft_browse_path(current_user.id) %> 
	</span>
	</button>

	<button type="button" class="btn btn-success" style = "align-content: center;">
    <span class="glyphicon glyphicon-ok" style="align-content: center; color:#FFFFFF;">
		<%= link_to '_', swipeRight_browse_path(current_user.id)  %> 
	</span>
	</button>


</div>
	<% else %>
		<h2>There are no more users</h2>

	<% end %>


	<br><br>

<div class = "text-center">

	<button type="button" class="btn btn-danger" style = "align-content: center;">
    <span class="glyphicon glyphicon-heart" style="align-content: center; color:#FFFFFF;">
	<%= link_to 'Show Matches', browse_path(current_user.id)  %>
	</span>
	</button>
	
	<br><br>

	<button type="button" class="btn btn-warning" style = "align-content: center;">
    <span class="glyphicon glyphicon-user" style="align-content: center; color:#FFFFFF;">
	<%= link_to "View Basic Info", view_basic_info_path(current_user.id) %> 
	</span>
	</button>


	<button type="button" class="btn btn-warning" style = "align-content: center;">
    <span class="glyphicon glyphicon-star" style="align-content: center; color:#FFFFFF;">
	<%= link_to "View Preferences", preferences_path(current_user.id) %>
	</span>
	</button>

	<button type="button" class="btn btn-warning" style = "align-content: center;">
    <span class="glyphicon glyphicon-envelope" style="align-content: center; color:#FFFFFF;">
	<%= link_to "Inbox", mailbox_inbox_path %>
	</span>
	</button>

	<button type="button" class="btn btn-warning" style = "align-content: center;">
    <span class="glyphicon glyphicon-circle-arrow-right" style="align-content: center; color:#FFFFFF;">
	<%= link_to "Logout", destroy_user_session_path, method: :delete %>
	</span>
	</button>
</div>
	
<%else%>
	<p id="notice"><%= notice %></p>
    <div class="container">

    <p style="text-align: center;"> Are you looking for a roomie? <br> LF: Roomie is a web-app that helps you browse for other "roomies" with the same preferences.</p>
        
        <!--<button type="button" class="btn">Basic</button>-->
        <div class="text-center" style="margin-bottom: 10px">
                <button type="button" class="btn btn-light">
  <%= link_to "Log-in", new_user_session_path %></button>
        </div>
       
        <div class="text-center" style="margin-bottom: 10px">
                <button type="button" class="btn btn-secondary">
  <%= link_to "Sign up", new_user_registration_path %></button>    
        </div>

        
         
    </div>

 
<%end%>
</body>
