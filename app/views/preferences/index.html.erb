<p id="notice"><%= notice %></p>

<button type="button" class="btn btn-warning" style = "align-content: center;">
    <span class="glyphicon glyphicon-home" style="align-content: center; color:#FFFFFF;">
        <%= link_to 'Home', root_path %>
    </span>
</button>

<button type="button" class="btn btn-warning" style = "align-content: center;">
    <span class="glyphicon glyphicon-circle-arrow-right" style="align-content: center; color:#FFFFFF;">
        <%= link_to "Logout", destroy_user_session_path, method: :delete %>
    </span>
</button>

<br>
<h2>Your Preferences</h2>
<div class="preferences-show">
<table>
  <tbody>
    <% @user_preferences.each do |preference| %>
      <tr>
        <td><%= preference.prefer %></td>
        <td><%= link_to 'Show', preference %> |</td>
        <td><%= link_to 'Edit', edit_preference_path(preference) %> |</td>
        <td><%= link_to 'Remove', destroy_preferences_path(preference)%></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>

<br>

<h2>All Preferences</h2>
<div class="preferences-show">
<table>

  <tbody>
    <% @preferences.each do |preference| %>
      <tr>
        <td><%= preference.prefer %></td>
        <td><%= link_to 'Show', preference %> |</td> 
        <td><%= link_to 'Delete', delete_preferences_path(preference)%></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>



<br>

<button type="button" class="btn btn-warning" style = "align-content: center;">
        <span class="glyphicon glyphicon-plus" style="align-content: center; color:#FFFFFF;">
          <%= link_to 'Suggest A New Preference', new_preference_path %>
      </span>
  </button>

<button type="button" class="btn btn-warning" style = "align-content: center;">
        <span class="glyphicon glyphicon-arrow-left" style="align-content: center; color:#FFFFFF;">
          <%= link_to 'Back To Basic Information', basic_informations_path%>
      </span>
</button>

