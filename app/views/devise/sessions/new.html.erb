<div class="media-body">
<h2>Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

    <!--displays error and alert messsages-->
    <%= @user.errors.full_messages.first if @user.errors.any? %>
    <% if flash[:alert] %>
        <p class="alert"><%= flash[:alert] %></p>
    <% end %>

    <!--form field for email, username, or mobile number-->
    <div class="field">
        <p>Login with username, email, or mobile number</p>
        <%= f.text_field :login %>
    </div>

    <!--form field for the password-->
    <div class="field">
        <%= f.label :password %><br />
        <%= f.password_field :password, autocomplete: "current-password" %>
    </div>

    <!--asks user if they want their account to be remembered-->
    <% if devise_mapping.rememberable? -%>
    <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
    </div>
    <% end -%>

   <div class="Buttons"> 
    <div class="actions">

        <button type="submit" class="btn btn-primary">
        <%= f.submit "Log in" %>
        </button>
        <br>
        <%= render "devise/shared/links" %>
    </div>
    
    </div>
    
</div>    
<% end %>


