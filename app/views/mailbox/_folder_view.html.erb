<h1>MESSAGING</h1>

<% flash.each do |key, value| %>
    <div class="alert alert-<%= key %>"><%= value %></div>
<% end %>

<div class="row">
  <div class="spacer"></div>
  <div class="col-md-12">
    <!-- we'll configure this to compose new conversations later -->
    <%= link_to "Compose", new_conversation_path, class: "btn btn-success" %>
    <div class="spacer"></div>
  </div>

  <div class="col-md-4">
    <div class="panel panel-default">
      <div class="panel-body">
        <%= render 'mailbox/folders' %>
      </div>
    </div>
  </div>

  <div class="col-md-4">
        <% if is_conversation %>
            <%= render 'conversations/form' %>
        <% else %>
            <%= render partial: 'conversations/conversation', collection: messages %>
        <% end %>
  </div>

  <div class ="col-md-4">
    <button type="button" class="btn btn-warning" style = "align-content: center;">
      <span class="glyphicon glyphicon-home" style="align-content: center; color:#FFFFFF;">
        <%= link_to 'Home', root_path %>
      </span>
    </button>
    
  </div>

</div>