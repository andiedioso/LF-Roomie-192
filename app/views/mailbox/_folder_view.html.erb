<h1>MESSAGING</h1>

<% flash.each do |key, value| %>
    <div class="alert alert-<%= key %>"><%= value %></div>
<% end %>

<div class="row">
    
    <!-- button to compose a new message -->
    <div class="spacer"></div>
        <div class="col-md-12">
            <%= link_to "Compose", new_conversation_path, class: "btn btn-success" %>
            <div class="spacer"></div>
        </div>

    <div class="col-md-4">
        <div class="panel panel-default">
            <div class="panel-body">
              <%= render 'mailbox/folders' %>
            </div>
        </div>
    </div>

    <div class="col-md-4">

        <!-- shows conversations if  -->
        <% if is_conversation %>
            <%= render 'conversations/form' %>

        <!-- shows messages if is_conversation is false -->    
        <% else %>
            <%= render partial: 'conversations/conversation', collection: messages %>
        <% end %>
    </div>
</div>