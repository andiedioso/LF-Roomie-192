<h1>MESSAGING</h1>


<% @receipts.each do |receipt| %>
    <% message = receipt.message %>
    <div class="shadow-sm p-1 mb-0 rounded">
        <div class="card border-dark text-dark ">
            <div class="container p-2">
                <div class="row">
                <!-- Pag user, lagay sa right -->
                    <% if message.sender == current_user %>
                
                        <div class="col-md-8" >
                            <div class="media-body">
                                <!-- displays the name of the sender, date, and body of the message -->
                                <h6 class="media-heading">
                                    <h4><b><%= message.sender.basic_information.firstname %> </b></h4>
                                    
                                    <small><%=  message.created_at.strftime("%A, %b %d, %Y at %I:%M%p") %></small>
                                </h6>
                                <h5>Message:</h5>
                                <h3>&nbsp;&nbsp;&nbsp;<%= message.body %></h3>
                            </div>
                        </div>

                        <div class="col-md-4" style="display: flex; flex-direction: column; justify-content: center;">
                            <!-- displays the picture of the sender -->
                            <a href="#">
                                <% if message.sender.basic_information.profile_pic? %>
                                    <h1><%= image_tag(message.sender.basic_information.profile_pic_url) %></h1>
                                <% else %>
                                    <h1><%= image_tag('default_user.jpg', height: '64', width: '64') %></h1>
                                <% end %>
                            </a>
                        </div>

                    <% else %>
                        <div class="col-md-4" style="display: flex; flex-direction: column; justify-content: center;">
                        <!-- displays the picture of the sender -->
                            <a href="#">
                                <% if message.sender.basic_information.profile_pic? %>
                                    <h1><%= image_tag(message.sender.basic_information.profile_pic_url) %></h1>
                                <% else %>
                                    <h1><%= image_tag('default_user.jpg', height: '64', width: '64') %></h1>
                                <% end %>
                            </a>
                        </div>

                        <div class="col-md-8">
                            <div class="media-body">
                                <!-- displays the name of the sender, date, and body of the message -->
                                <h6 class="media-heading">
                                    <h4><b><%= message.sender.basic_information.firstname %> </b></h4>
                                    
                                    <small><%=  message.created_at.strftime("%A, %b %d, %Y at %I:%M%p") %></small>
                                </h6>
                                <h5>Message:</h5>
                                <h3>&nbsp;&nbsp;&nbsp;<%= message.body %></h3>
                            </div>
                        </div>

                    <% end %>
                </div>
            </div>
        </div>
    </div>

<% end %>
<br>